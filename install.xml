<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>SNK</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>2009-09-16</creationDate>
	<author>Stefan "MÃ¼tze" Horst</author>
	<authorEmail>muetze@dpsg-liblar.de</authorEmail>
	<authorUrl>http://www.scoutnet.de</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.7</version>
	<!-- The description is optional and defaults to the name -->
	<description>Scoutnet Kalender Plugin</description>

	<params>
		<param name="SSIDs" default="4" />
		<param name="Kategories" default="" />
		<param name="Stufen" default="" />
	</params>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>snk.php</filename>
		<filename>index.html</filename>
		<filename>assets/index.html</filename>
		<filename>assets/kalender.css</filename>
		<filename>models/snk.php</filename>
		<filename>models/event.php</filename>
		<filename>models/index.html</filename>
		<filename>models/jsonRPCClient.php</filename>
		<filename>models/kalender.php</filename>
		<filename>models/stufe.php</filename>
		<filename>models/user.php</filename>
		<filename>views/snk/index.html</filename>
		<filename>views/snk/view.html.php</filename>
		<filename>views/snk/tmpl/index.html</filename>
		<filename>views/snk/tmpl/default.php</filename>
		<filename>views/index.html</filename>
	</files>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>	

	<administration>
		<!-- Administration Menu Section -->
		<menu>Scoutnet Kalender</menu>
		
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Site Main File Copy Section -->
			<filename>snk.php</filename>
			<filename>snk.xml</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<filename>controller.php</filename>
			<filename>controllers/snk.php</filename>
			<filename>controllers/index.html</filename>
			<filename>models/snks.php</filename>
			<filename>models/snk.php</filename>
			<filename>models/index.html</filename>
			<filename>tables/snk.php</filename>
			<filename>tables/index.html</filename>
			<filename>views/snk/view.html.php</filename>
			<filename>views/snk/tmpl/form.php</filename>
			<filename>views/snk/index.html</filename>
			<filename>views/snk/tmpl/index.html</filename>
			<filename>views/snks/view.html.php</filename>
			<filename>views/snks/index.html</filename>
			<filename>views/snks/tmpl/default.php</filename>
			<filename>views/snks/tmpl/index.html</filename>
		</files>		
	</administration>
</install>
